	co = checkout
	d = diff
	dc = diff --cached
	f = fetch
	l = log -20 --no-merges
	lg = log -20 --graph
	lm = log main..
	lM = log master..
	ls = log staging..
	m = merge
	p = push
	pf = push -f
	pd = push origin -delete
	r = rebase
	rim = rebase -i main
	riM = rebase -i master
	ris = rebase -i staging
	rh = reset --hard
	rp = remote prune origin
	s = status
	sh = show
	shl = show HEAD

